<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userAccount.AccountController_1">
    <!-- Container -->
    
    <VBox alignment="CENTER" layoutX="-1.0" prefHeight="485.0" prefWidth="600.0" spacing="20.0" style="-fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, #00000055, 10, 0.5, 0, 0);">
        <!-- Title -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="User Settings" />

        <!-- Username Change Section -->
        <VBox spacing="10.0" style="-fx-padding: 10px;">
            <Label style="-fx-font-size: 14px;" text="Change Username:" />
            <TextField fx:id="currentUsernameField" promptText="Enter current username" />
            <TextField fx:id="newUsernameField" promptText="Enter new username" />
        </VBox>
        
        <!-- Password Change Section -->
        <VBox spacing="10.0" style="-fx-padding: 10px;">
            <Label style="-fx-font-size: 14px;" text="Change Password:" />
            <TextField fx:id="currentPasswordField" promptText="Enter current password" />
            <TextField fx:id="newPasswordField" promptText="Enter new password" />
        </VBox>
        
        <!-- Buttons -->
        <VBox spacing="10.0" style="-fx-padding: 10px;">
            <Button fx:id="saveChangesButton" onAction="#changebutt" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold;" text="Save Changes" />
            <Button fx:id="resetButton" onAction="#reserbutt" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Reset Fields" />
        <Button onAction="#Logout" prefHeight="14.0" prefWidth="91.0" style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 5px 10px;" text="Back">
            <font>
               <Font size="12.0" />
            </font></Button>

        </VBox>
    </VBox>
</AnchorPane>
